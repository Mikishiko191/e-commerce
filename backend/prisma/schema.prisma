generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}


model User {
  id        String   @id @default(cuid())
  role      String   @default("user") // By default make value user
  username  String
  email     String   @unique
  password  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products  Product[] @relation("UserProducts")
}

model Product {
  id                  String   @id @default(cuid())
  title               String
  description         String
  price               Float
  imageUrls           String[]
  color               String?
  stock               Int?
  category            String?
  slug                String?
  tags                String[]
  isAvailable         Boolean
  viewCount           Int?
  shippingCost        Float?   
  shippingTime        String?
  averageRating       Float?
  discountPrice       Float?
  discountPercentage  Float?
  createdById         String
  createdBy           User      @relation(fields: [createdById], references: [id], name: "UserProducts")
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
}
